@page
@model Customers.Web.Pages.Customer.CreateModel
@{
    ViewData["Title"] = "Create";
}

<h3>@ViewData["Title"]</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method = "post">
            <div class="form-group">
                <label asp-for="createCustomer.FirstName" class="control-label"></label>
                <input asp-for="createCustomer.FirstName" class="form-control" />
                <span asp-validation-for="createCustomer.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="createCustomer.LastName" class="control-label"></label>
                <input asp-for="createCustomer.LastName" class="form-control" />
                <span asp-validation-for="createCustomer.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="createCustomer.City" class="control-label"></label>
                <input asp-for="createCustomer.City" class="form-control" />
                <span asp-validation-for="createCustomer.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="createCustomer.EmailId" class="control-label"></label>
                <input asp-for="createCustomer.EmailId" type="email" class="form-control" />
                <span asp-validation-for="createCustomer.EmailId" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-success" asp-page="Index">Customer List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
